<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/qr_input"
        android:padding="12dp"
        android:background="@drawable/btn_gradient3"
        android:hint="Enter QR Value"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Generate QR"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:background="@drawable/btn_gradient"
        android:id="@+id/qr_generate_btn"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:id="@+id/qr_image"
        android:src="@drawable/splash"
        android:padding="5dp"/>



    <Button
        android:id="@+id/scan_qr_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_gradient2"
        android:text="scan QR"
        android:textSize="18sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text=" Your Scan Result Is Here "
        android:fontFamily="monospace"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:linksClickable="true"
        android:textSize="20sp"
        android:autoLink="all"
        android:id="@+id/result"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>